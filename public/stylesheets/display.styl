@import "peruse.css"

no-select()
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
  cursor: default

html, body, #pano
  background-color: peruse_dark
  margin: 0
  padding: 0
  height: 100%

body
  font 1em/1.3em Helvetica, Arial, sans-serif

#pano
  z-index: 0
  width: 100%

.pano-meta
  position: absolute
  width: 20em
  height: 5em
  left: 50%
  bottom: 1em
  margin-left: -10em
  background-color: peruse_box_bg
  padding: 0
  color: #fff
  text-align: center
  border: 0.07em peruse_gray
  border-radius: 0.2em
  z-index: 1
  vertical-align: middle

  span
    display: block

  p
    position: relative
    top: 50%
    height: 4em
    margin: -2em 1.2em 0 1.2em
    no-select()
